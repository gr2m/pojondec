

<h1><%= @upload.filename %></h1>

<table class="table">
  <tr>
    <th>Filename</th>
    <td>
      <%= link_to @upload.filename, upload_path(format: 'csv') %>
    </td>
  </tr>
  <tr>
    <th>Account</th>
    <td>
      <%= @upload.account.name %>
    </td>
  </tr>
  <tr>
    <th>Uploaded at</th>
    <td>
      <%= @upload.created_at.strftime "%d.%m.%Y" %>
    </td>
  </tr>
</table>

<h3>
  Transactions
  <small>
    (<%= @upload.transactions.count %>)
  </small>
</h3>

<%= render 'transactions/index_table', :transactions => @upload.transactions %>


<p>
  <%= link_to 'Edit', edit_upload_path(@upload), :class => 'btn btn-primary' %>
  <%= link_to 'Destroy', @upload, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
  <%= link_to 'Back', uploads_path %>
</p>